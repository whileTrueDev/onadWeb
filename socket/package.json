{
  "name": "onad-banner-broadcasting-system",
  "version": "1.0.0",
  "description": "A program to emit to all client real time using socketio",
  "main": "dist/app.js",
  "author": "leejineun",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc",
    "postbuild": "browserify ./dist/lib/client.js ./dist/lib/hiddenEventHandler.js ./dist/lib/programIdentifier.js ./dist/lib/imageClicker.js -o ./dist/lib/bundle.js && cp -r ./views ./dist/views && cp -r ./public/images/ ./dist/public/images",
    "start:debug": "nodemon --watch ./ --exec ts-node ./app.ts",
    "start:production": "node --expose-gc ./dist/app.js"
  },
  "dependencies": {
    "@types/http-errors": "^1.6.3",
    "@types/jquery": "^3.3.33",
    "@types/mysql": "^2.15.9",
    "@types/node-schedule": "^1.3.0",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/winston": "^2.4.4",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.2",
    "express": "^4.17.1",
    "mysql": "^2.18.1",
    "node-schedule": "^1.3.2",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "socketio": "^1.0.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.4",
    "browserify": "^16.5.1",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1"
  }
}
